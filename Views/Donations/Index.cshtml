@model IEnumerable<GiftGivers.Models.Donation>

@{
    ViewData["Title"] = "My Donations";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Make a New Donation</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Item Type</th>
                    <th>Quantity</th>
                    <th>For Disaster</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DonationDate.ToShortDateString()</td>
                            <td>@item.ItemType</td>
                            <td>@item.Quantity</td>
                            <td>@item.Disaster.DisasterName</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center py-4">You have not made any donations yet.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model GiftGivers.Models.Donation

@{
    ViewData["Title"] = "Make a Donation";
}

<h1>Make a Donation</h1>
<h4>Your contribution matters.</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="DisasterId" class="form-label"></label>
                        <select asp-for="DisasterId" class="form-select" asp-items="ViewBag.DisasterId">
                            <option value="">-- Select a Disaster --</option>
                        </select>
                        <span asp-validation-for="DisasterId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ItemType" class="form-label"></label>
                        <input asp-for="ItemType" class="form-control" placeholder="e.g., Canned Food, Blankets" />
                        <span asp-validation-for="ItemType" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Donate" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

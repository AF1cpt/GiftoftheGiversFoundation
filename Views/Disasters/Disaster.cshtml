@model GiftGivers.Models.Disaster

@{
    ViewData["Title"] = "Disaster Details";
}

<h1>@Model.DisasterName</h1>

<div>
    <h4>@Model.Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>
<hr />

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Needed Donations</h3>
        @if(Model.Donations.Any())
        {
        <ul class="list-group">
            @foreach (var item in Model.Donations)
                {
            <li class="list-group-item">@item.Quantity x @item.ItemType</li>
                }
        </ul>
        } else { <p>No specific donation requests yet.</p> }
    </div>
    <div class="col-md-6">
        <h3>Volunteer Tasks</h3>
        @if(Model.VolunteerTasks.Any())
        {
        <ul class="list-group">
            @foreach (var item in Model.VolunteerTasks)
                {
            <li class="list-group-item">@item.TaskDescription <span class="badge bg-info float-end">@item.Status</span></li>
                }
        </ul>
        } else { <p>No volunteer tasks posted yet.</p> }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

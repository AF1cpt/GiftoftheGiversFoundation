@model IEnumerable<GiftGivers.Models.Disaster>

@{
    ViewData["Title"] = "Reported Disasters";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Report New Disaster
        </a>
    </div>

    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-light-subtle">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.DisasterName)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                @Html.DisplayFor(modelItem => item.Location)
                            </h6>
                            <p class="card-text flex-grow-1">
                                @item.Description
                            </p>
                            <div class="mt-auto">
                                <p class="card-text">
                                    <small class="text-muted">Started: @item.StartDate.ToShortDateString()</small>
                                </p>
                                <a asp-action="Details" asp-route-id="@item.DisasterId" class="btn btn-outline-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">No Disasters Reported</h4>
                <p>There are currently no active disaster reports. You can be the first to report one.</p>
            </div>
        </div>
    }
</div>

@* Adding Font Awesome for icons *@
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}